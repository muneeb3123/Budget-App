<%= stylesheet_link_tag 'form'%>


<div class="heading">
  <div class="left-link">
    <%= link_to raw('<i class="fas fa-arrow-left"></i>'), root_path, class: "back-icon" %>
  </div>
 <h1 class="center-heading">change password</h1>
</div>

<div class="forms">

<%= form_for(resource, as: resource_name, url: password_path
(resource_name), html: { method: :put }) do |f| %>
 <%= image_tag "money.png", class: "money-logo"%>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password" placeholder: "password"%>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
